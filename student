import kivy
from kivy.app import App
from kivy.uix.gridlayout import GridLayout
from kivy.uix.label import Label
from kivy.uix.textinput import TextInput
from kivy.uix.button import Button


class childApp(GridLayout):
    def __init__(self, **kwargs):
        super(childApp, self).__init__()
        self.cols = 2
        self.add_widget(Label(text='Student Name'))
        self.s_name = TextInput()
        self.add_widget (self.s_name)

        self.add_widget(Label(text='Student Roll No'))
        self.s_roll = TextInput()
        self.add_widget (self.s_roll)

        self.add_widget(Label(text='Student Marks'))
        self.s_marks = TextInput()
        self.add_widget (self.s_marks)

        self.press = Button(text = 'Save')
        self.press.bind(on_press = self.click_me)
        self.add_widget (self.press)


    def click_me(self, instance):
        print("Name of Student: "+self.s_name.text)
        print("Roll No of Student: "+self.s_roll.text)
        print("Marks of Student: "+self.s_marks.text)
        print("Your have entered your data successfully\n") 


class parentApp(App):
    def build(self):
        return childApp()


if __name__ == "__main__":
    parentApp().run()
